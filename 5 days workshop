select ename,deptno
from employees
where deptno=10 and job='manager';





select ename,deptno
from employees
where deptno NOT IN (10,40);

select ename,deptno,hiredate ,(sal*12)as annualsalary
from employees
where deptno=30 and job='salesman' and sal*12>10000;

select ename,sal,deptno,(sal*12)as annualsalary
from employees
where deptno=20 and sal>1100 and (sal*12)>12000;

select ename,hiredate
from employees
where hiredate between '1981-12-31' and '1987-01-01';

select ename,hiredate,deptno
from employees
where hiredate between'1981-01-01' and '1981-12-31' and deptno=20 and sal>2000;


select ename,sal 
from employees
where sal NOT BETWEEN 1000 and 3000 ;

select ename ,sal
from employees
where sal=(select max(sal) from employees);

select ename,sal,empno 
from employees
 where sal >1000 group by empno; 
 
 select ename,job,deptno
 from employee
 where job='clerk'or job='salesman' and deptno=10 or deptno=30 and sal>1800;
 
 select ename
 from employees
 where ename LIKE 'S%';
 
 select ename
 from employees
 where ename LIKE '%A';
 
 select ename
 from employees
 where ename LIKE '_M%';
 
 select ename,hiredate
 from employees
 where hiredate LIKE '%-04-%';
 
 select ename
 from employees
 where ename LIKE '%a%a%';
 
 select count(*)
 from employees
 where ename like '%e%';
 
 select avg(sal),sum(sal),count(ename),max(sal)
 from employees
 where job='president';
 
 select deptno,max(sal)
 from employees
 group by deptno;
 
  select job,max(sal)
 from employees
 group by job;
 
 select job,deptno,max(sal)
 from employees
 group by job,deptno;
 
 select count(ename),job,deptno
 from employees
 where ename like '%a%'
 group by job,deptno
 order by job DESC;
 
 select count(ename),job,deptno
 from employees
 group by job,deptno
 having count(deptno)>3
 order by deptno ASC;
 
 select deptno,count(*)
 from employees
 group by deptno
 having count(*)>=3;
 
