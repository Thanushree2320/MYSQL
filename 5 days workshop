-- Create Branch table query 


CREATE TABLE Branch (
BID VARCHAR(20) PRIMARY KEY,
Branch_name VARCHAR(255) NOT NULL
);


-- Create Companies table query 


CREATE TABLE Companies (
CID VARCHAR(20) PRIMARY KEY,
company_name VARCHAR(255) NOT NULL,
students_placed INT,
package DECIMAL(10, 2)
);


-- Create Subjects table

CREATE TABLE Subjects (
SID VARCHAR(20) PRIMARY KEY,
subject_name VARCHAR(255) NOT NULL,
semester INT,
hours INT
);


-- Create Lectures table

CREATE TABLE Lectures1 (
LID VARCHAR(20) PRIMARY KEY,
first_name VARCHAR(255) NOT NULL,
designation VARCHAR(255) NOT NULL,
college VARCHAR(255) NOT NULL,
branch VARCHAR(20),
SID VARCHAR(20),
FOREIGN KEY (SID) REFERENCES Subjects(SID)
);


-- Create Students table

CREATE TABLE Students (
usn VARCHAR(10) PRIMARY KEY,
first_name VARCHAR(255) NOT NULL,
branch VARCHAR(20),
college VARCHAR(255) NOT NULL,
semester INT,
CGPA DECIMAL(3, 2),
DOJ DATE,
DOG DATE,
gender VARCHAR(10),
section VARCHAR(10),
CID VARCHAR(20),
job_role VARCHAR(255),
package DECIMAL(10, 2),
FOREIGN KEY (CID) REFERENCES Companies(CID)
);


-- Create Marks table

CREATE TABLE Marks (
usn VARCHAR(10),
sid VARCHAR(20),
test1 INT,
test2 INT,
test3 INT,
subject_cgpa DECIMAL(3, 2),
FOREIGN KEY (usn) REFERENCES Students(usn),
FOREIGN KEY (sid) REFERENCES Subjects(SID)
);

